<h1>
  <%= @user.email %>
</h1>
<ul>
  <% @user.cocktails.each do |cocktail| %>
    <li>
      <%= cocktail.name %>
      <% if current_user == @user  %>
        <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
        <%= link_to 'Delete',
          cocktail_path(cocktail),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= simple_form_for [ @user, @cocktail ] do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>
