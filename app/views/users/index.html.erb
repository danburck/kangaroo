<h1>Bartenders</h1>
<ul>
  <% @users.each do |user| %>
    <% if user.cocktails.present? %>
      <%= link_to user.email, user_path(user)  %>
      <% user.cocktails.each do |cocktail| %>
        <%= cocktail.name %>
      <% end %>
    <% end %>
  <% end %>
</ul>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
